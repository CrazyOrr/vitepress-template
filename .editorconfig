# https://editorconfig.org/

root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Configurable Prettier behaviors
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 80
spaces_around_operators = true

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
